    "@types/fastclick": "^1.0.33",
    "@vitejs/plugin-vue": "^5.2.3",
    "fastclick": "^1.0.6",
    "pinia": "^3.0.2",
    "tone": "^15.1.22",
    "vite": "^6.3.4",
    "vue": "^3.5.13",
    "vue-router": "^4.5.1"
  },
  "devDependencies": {
    "@types/node": "^22.15.17",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
